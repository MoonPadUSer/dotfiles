set $mod Mod1
set $term urxvt
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager

font pango:System San Francisco Display 11

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork --color "$bg-color"

exec --no-startup-id nm-applet

# Volume Control
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute        exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks
# Brightness Control
bindsym Mod4+Up              exec --no-startup-id "sudo brightnessctl -d acpi_video0 set 5+ && pkill -RTMIN+2 i3blocks"
bindsym Mod4+Down	     exec --no-startup-id "sudo brightnessctl -d acpi_video0 set 5- && pkill -RTMIN+2 i3blocks"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Return				exec $term
bindsym $mod+Shift+J			kill
bindsym $mod+Shift+colon	reload
bindsym $mod+Shift+P			restart
bindsym $mod+space				exec dmenu_run

# change focus
bindsym $mod+h						focus left
bindsym $mod+t						focus down
bindsym $mod+n						focus up
bindsym $mod+s						focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left					focus left
bindsym $mod+Down					focus down
bindsym $mod+Up						focus up
bindsym $mod+Right				focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left		move left
bindsym $mod+Shift+Down		move down
bindsym $mod+Shift+Up			move up
bindsym $mod+Shift+Right	move right

# splitting
bindsym $mod+d						split h
bindsym $mod+k						split v

# enter fullscreen mode for the focused container
bindsym $mod+u						fullscreen toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+ampersand    workspace number $ws1
bindsym $mod+bracketleft  workspace number $ws2
bindsym $mod+braceleft    workspace number $ws3
bindsym $mod+braceright   workspace number $ws4
bindsym $mod+parenleft    workspace number $ws5
bindsym $mod+equal        workspace number $ws6
bindsym $mod+asterisk     workspace number $ws7
bindsym $mod+parenright   workspace number $ws8
bindsym $mod+plus         workspace number $ws9
bindsym $mod+bracketright workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+percent move container to workspace number $ws1
bindsym $mod+Shift+7       move container to workspace number $ws2
bindsym $mod+Shift+5       move container to workspace number $ws3
bindsym $mod+Shift+3       move container to workspace number $ws4
bindsym $mod+Shift+1       move container to workspace number $ws5
bindsym $mod+Shift+9       move container to workspace number $ws6
bindsym $mod+Shift+0       move container to workspace number $ws7
bindsym $mod+Shift+2       move container to workspace number $ws8
bindsym $mod+Shift+4       move container to workspace number $ws9
bindsym $mod+Shift+6       move container to workspace number $ws10

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h				resize shrink width  10 px or 10 ppt
        bindsym t				resize grow   height 10 px or 10 ppt
        bindsym n				resize shrink height 10 px or 10 ppt
        bindsym s				resize grow   width  10 px or 10 ppt

        bindsym Left		resize shrink width  10 px or 10 ppt
        bindsym Down		resize grow   height 10 px or 10 ppt
        bindsym Up			resize shrink height 10 px or 10 ppt
        bindsym Right		resize grow   width  10 px or 10 ppt

        bindsym Return	mode "default"
        bindsym Escape	mode "default"
        bindsym $mod+p	mode "default"
}
bindsym $mod+p				mode "resize"

bindsym $mod+Shift+h  resize shrink width  5 px or 5 ppt
bindsym $mod+Shift+t  resize grow   height 5 px or 5 ppt
bindsym $mod+Shift+n  resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+s  resize grow   width  5 px or 5 ppt


# CUSTOM COLORS
set $bg-color            #2F343F
set $inactive-bg-color   #2F343F
set $text-color          #F3F4F5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background          text
client.focused          $bg-color           $bg-color           $text-color           #5294E2
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color  #5294E2
client.focused inactve  $inactive-bg-color  $inactive-bg-color  $inactive-text-color  #5294E2
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color           #5294E2



# CUSTOM BAR
bar {
    position top
    height 25
    status_command SCRIPT_DIR=~/.scripts/i3blocks/ i3blocks -vvv
    #status_command i3status
    font pango:Neep-10.5
    colors {
        background $bg-color
        separator #757575
        #                   border              background          text
        focused_workspace   $bg-color           $bg-color           $text-color
        inactive_workspace  $inactive-bg-color  $inactive-bg-color  $inactive-text-color
        urgent_workspace    $urgent-bg-color    $urgent-bg-color    $text-color
    }
}

# Configure i3-gaps
gaps inner 15
gaps outer 5
for_window [class="^.*"] border pixel 2
smart_gaps on


bindsym $mod+o                  gaps inner current plus 5
bindsym $mod+Shift+o            gaps inner current minus 5
bindsym $mod+Shift+e            gaps inner current set 0; gaps outer current set 0;
bindsym $mod+Shift+u            gaps inner current set 15; gaps outer current set 5;

