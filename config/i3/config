bindsym $mod+q                  exec --no-startup-id ~/.scripts/dmenu/dmenu-kill-process
# DMENU: i3-logout (QWERTY: Shift+E)
bindsym $mod+Shift+greater      exec --no-startup-id ~/.scripts/dmenu/dmenu-i3-logout
# DMENU: select-monitor (QWERTY: M)
bindsym $mod+m                  exec --no-startup-id ~/.scripts/dmenu/dmenu-select-monitor

# Screenshot keybinds
